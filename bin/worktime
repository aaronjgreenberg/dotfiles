# WORKTIME
# ========
# Sets clear work and break intervals.
#
# Aaron Greenberg
# September 2012

while (true); do
	terminal-notifier -title 'WorkTime' -message 'Get to work, biatch!' -group 'worktime'
	sleep 1800
	terminal-notifier -remove 'worktime'
	terminal-notifier -title 'WorkTime' -message 'Break-time, biatch!' -group 'worktime'
	sleep 180
	terminal-notifier -remove 'worktime'
done
